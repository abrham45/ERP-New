@model Erp.Models.AuctionOwner

@{
    ViewData["Title"] = "Create";
}

<div class="container px-5">
    <div class="card p-3">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-">Register Auction  </h5>
            </div>
        </div>
        @if (TempData.ContainsKey("Error"))
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Error"]
            </div>
        }
        <div class="card-body">
            <form asp-action="Create">
                <div class="row">
                    <div class="col-md-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="AuctionNumber" class="control-label"> Auction Number</label>
                            <input asp-for="AuctionNumber" class="form-control" placeholder="Enter Auction Number" />
                            <span asp-validation-for="AuctionNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AssetName" class="control-label">Asset Name</label>
                            <input asp-for="AssetName" class="form-control" placeholder="Enter Asset Name" />
                            <span asp-validation-for="AssetName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <h4 class="p-3 bg-secondary text-white"> <b>Description</b> </h4>
                            <textarea asp-for="Description" class="form-control ckeditor" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control" placeholder="Enter Quantity" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <h4 class="p-3 bg-secondary text-white"> <b>Specification</b> </h4>
                            <textarea asp-for="Specification" class="form-control ckeditor" required></textarea>
                            <span asp-validation-for="Specification" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

   
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
