@model Erp.Models.Experience

@{
    ViewData["Title"] = "Create";
}

<div class="container px-5">

    <div class="card">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-"> Experience Requesting Form </h5>
            </div>

        </div>

        <div class="card-body">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="reason" class="control-label">Reason</label>
                    <textarea asp-for="reason" class="form-control" rows="3" placeholder="Enter why you are requesting experience . . ."></textarea>
                    <span asp-validation-for="reason" class="text-danger"></span>
                </div>


                <div class="card-footer bg-white p-2">
                    <div class="row p-0 m-0">

                        <div class="col-2  align-self-end  p-0">
                            <div class="form-group mb-0">
                                <input type="submit" value="Submit" class="btn btn-glow-dark btn-primary ml-4" />
                            </div>
                        </div>
                    </div>
                </div>

            </form>
    </div>
        </div>



    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
