@model Erp.Models.EmployeeDeduction

@{
    ViewData["Title"] = "Edit";
}

<div class="container px-5">
    <div class="card p-3">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-">
                    Update Employee Deduction
                </h5>
            </div>
        </div>
        <div class="text-center p-2 my-1">
            @if (TempData.ContainsKey("Warning"))
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Warning"]
                </div>
            }


        </div>
        <div class="card-body">
            <div class="pl-3 mx-auto">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Employee Id</label>
                        <input name="EmployeeId" class="form-control" placeholder="Enter Employee ID...">
                    </div>
                    <div class="form-group">
                        <label class="control-label">Deduction Policy</label>
                        <select asp-for="DeductionPolicyId" class="form-control" asp-items="ViewBag.DeductionPolicyId"></select>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>

            <div class="card-footer">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
