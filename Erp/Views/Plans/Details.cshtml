@model Erp.Models.Plan

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="card card-info p-2">
        <div class="card-header">
            Plan Detail
        </div>
        <div class="card-body">
            <div class="row  mt-3">
                <div class="col-lg">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FiscalYear)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FiscalYear)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Period)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Period)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PlanType)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PlanType.Name)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProjectNumber)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProjectNumber)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.Status == true)
                            {
                                <span class="badge badge-success">Approved</span>
                            }
                            else if (Model.Status == false)
                            {
                                <span class="badge badge-danger">Rejected</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pending </span>
                            }
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OperationExpense)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OperationExpense)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Employee)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Employee.EmployeeCode)
                        </dd>
                    </dl>

                    <div class="card-footer">

                        @if (Context.User.IsInRole("Director"))
                        {
                            <a asp-action="Index">Back to List</a>
                            <br /> <br />
                            <a asp-action="Reject" asp-route-id="@Model.Id" asp-controller="Plans" class="btn btn-danger">Reject</a>
                            <a asp-action="Approve" asp-route-id="@Model.Id" asp-controller="Plans" class="btn btn-success">Approve</a>

                        }
                        else if (!Context.User.IsInRole("Director") & Model.Status == null)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> <br />
                            <a asp-action="IndexUser">Back to List</a>
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
