@model Erp.Models.AssetRisk

@{
    ViewData["Title"] = "Create";
}
<div class="container px-5">
    <div class="card p-3">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-"> Asset Risk </h5>
            </div>
        </div>

        <form asp-action="Create">
            @if (TempData.ContainsKey("Error"))
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Error"]
                </div>
            }
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group  p-3">
                    <label>Asset Factory Number</label>
                    <input name="AssetId" class="form-control" placeholder=" Enter Factory number .." required />
                </div>


                <div class="form-group  p-3">
                    <label asp-for="RiskId" class="control-label">Division </label>
                    <select asp-for="RiskId" class="form-control" asp-items=" ViewBag.RiskId"></select>
                    <span asp-validation-for="RiskId" class="text-danger"></span>
                </div>

                <div class="form-group  p-3">
                    <label asp-for="FailureProbability">Salvage Value</label>
                    <input asp-for="FailureProbability" class="form-control" placeholder=" Enter Salvage Value .." required />
                    <span asp-validation-for="FailureProbability" class="text-danger"></span>
                </div>


                <div class="form-group  p-3">
                    <label asp-for="Loss">Useful Life Time</label>
                    <input asp-for="Loss" class="form-control" placeholder=" Enter Useful Life Time .." required />
                    <span asp-validation-for="Loss" class="text-danger"></span>
                </div>

                <div class="card-footer bg-white p-2">
                    <div class="row p-0 m-0">
                        <div class="col align-self-start pl-3">
                            <a asp-action="Index">Back to List</a>
                        </div>
                        <div class="col-2  align-self-end  p-0">
                            <div class="form-group mb-0">
                                <input type="submit" value="Create" class="btn btn-glow-dark btn-primary ml-4" />
                            </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

