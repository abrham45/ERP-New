@model Erp.Models.AttendanceSupExcuses

@{
    ViewData["Title"] = "Create";
}

<div class="container px-5">
    <div class="card p-3">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-">  Employee Excuses  Attendance</h5>
            </div>
        </div>

        <div class="text-center my-1">
            @if (TempData.ContainsKey("Warning"))
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Warning"]
                </div>
            }


        </div>
        @{ var attend = ViewData["Attendance"] as Erp.Models.Attendances;

        }
        <div class="card-body">
            <form asp-action="Create">
                <div class="card-body  col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input value="@attend.Id" type="hidden" />
                    <div class="form-group  p-3">
                        <label asp-for="AttendanceExcusesId">Attendance Excuses</label>
                        <select asp-for="AttendanceExcusesId" class="form-control" asp-items="ViewBag.AttendanceExcusesId"></select>
                        <span asp-validation-for="AttendanceExcusesId" class="text-danger"></span>
                    </div>
                    <div class="form-group  p-3">
                        <label asp-for="Reason">Reason</label>
                        <textarea asp-for="Reason" class="form-control" rows="3" placeholder="Reason..."></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create Excuse" class="btn btn-primary" />
                    </div>
                </div>

            </form>

        </div>
        <div class="card-footer bg-white p-2">
            <div class="col align-self-start pl-3">
                <a asp-controller="Attendance" asp-action="IndexBasicI">Back to List</a>
            </div>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

