@model Erp.Models.AttendanceSupExcuses

@{
    ViewData["Title"] = "Create";
}

<div class="container px-5">
    <div class="card p-3">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-">  Employee Excuses  Attendance</h5>
            </div>
        </div>

        <div class="text-center my-1">
            @if (TempData.ContainsKey("Warning"))
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Warning"]
                </div>
            }


        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div class="card-body  col-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group p-3">
                        <label asp-for="EmployeeId">Employee </label>
                        <input asp-for="EmployeeId" class="form-control" placeholder=" Enter Employee Code...." required />
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>

                    <div class="form-group  p-3">
                        <label asp-for="Date">Date Excuses</label>
                        <input type="date" asp-for="Date" class="form-control" placeholder=" Enter Date of excuse...." />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="form-group  p-3">
                        <label asp-for="AttendanceExcusesId">Attendance Excuses</label>
                        <select asp-for="AttendanceExcusesId" class="form-control" asp-items="ViewBag.AttendanceExcusesId"></select>
                        <span asp-validation-for="AttendanceExcusesId" class="text-danger"></span>
                    </div>

                </div>

                @*      <div class="row p-0 m-0">
                            <div class="col align-self-start pl-3">
                                <a asp-action="Index">Back to List</a>
                            </div>
                            <div class="col-2  align-self-end  p-0">
                                <div class="form-group mb-0">
                                    <input type="submit" value="Create" class="btn btn-glow-dark btn-primary ml-4" />
                                </div>
                            </div>
                    <div class="form-group">
                        <label asp-for="Reason" class="control-label"></label>
                        <input asp-for="Reason" class="form-control" />
                        <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>*@

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            </form>


        </div>
        <div class="card-footer bg-white p-2">
            <div class="col align-self-start pl-3">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

