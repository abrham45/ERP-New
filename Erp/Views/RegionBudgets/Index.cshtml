@model IEnumerable<Erp.Models.RegionBudget>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalRegionOverheadCosts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalRegionTimeCosts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalRegionExternalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalRegionZoneTotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionPlan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalRegionOverheadCosts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalRegionTimeCosts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalRegionExternalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalRegionZoneTotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionPlan.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
