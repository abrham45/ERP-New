@model Erp.Models.EmployeeBonus

@{
    ViewData["Title"] = "Edit";
}


<div class="container px-5">
    <div class="card p-3">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-"> Register Employee Bonus</h5>
            </div>
        </div>
        <div class="text-center p-2 my-1">
            @if (TempData.ContainsKey("Warning"))
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Warning"]
                </div>
            }


        </div>
        <div class="card-body">
                <div class="pl-3 mx-auto">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="EmployeeId" class="control-label"></label>
                            <input name="EmployeeId" class="form-control" placeholder="Enter Employee Id...">
                        </div>
                        <div class="form-group">
                            <label class="control-label">Bonus Policy</label>
                            <select asp-for="BonusId" class="form-control" asp-items="ViewBag.BonusId"></select>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            <div class="card-footer">
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
