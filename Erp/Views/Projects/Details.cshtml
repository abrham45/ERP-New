@model Erp.Models.Project

@{
    ViewData["Title"] = "Details";
}


<div class="container px-5">
    <div class="card mt-5">
        <div class="card-header">
            <div class="card-title mb-5">
                <h5 class="text-muted text-">Project Detail</h5>
            </div>
            <div class="card-tools">

                <dl class="row">
                    <dt class="col-sm-2">
                        Project Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProjectName)
                    </dd>
                    <dt class="col-sm-2">
                        Project Description
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProjectDescription)
                    </dd>
                    <dt class="col-sm-2">
                        Project Budget
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProjectBudget) ETB
                    </dd>
                    <dt class="col-sm-2">
                        Project Duration
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ProjectDuration)
                    </dd>
                    <dt class="col-sm-2">
                        Assigned to:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Employee.FirstName)  @Html.DisplayFor(model => model.Employee.LastName)

                    </dd>
                    <dt class="col-sm-2">
                        Assigned to:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Employee.EmployeeCode)
                    </dd>
                    <dt class="col-sm-2">
                        Assigned to:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Employee.Team.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Project Start Date
                    </dt>
                    <dd class="col-sm-10">
                        @Model.ProjectStartDate.ToString("dd MMM, yyyy")
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.Status == true)
                        {
                            <span class="badge badge-success">Completed</span>
                        }
                        else if (Model.Status == false)
                        {
                            <span class="badge badge-info-border">Not Started</span>
                        }
                        else
                        {
                            <span class="badge badge-warning">In Progress </span>
                        }

                    </dd>

                </dl>
            </div>

            <div class="card-footer">
                @if (Context.User.IsInRole("Director"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> <br />
                    <a asp-action="Index">Back to List</a>
                }
                else if (Context.User.IsInRole("TeamLeader"))
                {
                    <a asp-action="IndexT">Back to List</a>
                }


            </div>
        </div>
    </div>
</div>