@model Erp.Models.Driver

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="card card-info p-2">
        <div class="card-header">
            Driver Detail
        </div>
        <div class="card-body">
            <div>
                <img src=" data:images/*;@Model.LicensePicture" class="rounded-circle" height="40" width="40" asp-append-version="true" />

            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DriverId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DriverId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ExperienceInYears)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ExperienceInYears)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Sex)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Sex)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nationality)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nationality)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date_of_birth)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date_of_birth)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Mobile)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Mobile)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Region)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Region)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Subcity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Subcity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Woreda)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Woreda)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.Status == true)
                    {
                        <span class="badge badge-success">Approved</span>
                    }
                    else if (Model.Status == false)
                    {
                        <span class="badge badge-danger">Rejected</span>
                    }
                    else
                    {
                        <span class="badge badge-warning">Pending </span>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.StartDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EndDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LicenseNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LicensePictureName)
                </dd>
               
            </dl>
        </div>
        <div class="card-footer">
            @if (Context.User.IsInRole("FleetTeam"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> <br />
            }
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>