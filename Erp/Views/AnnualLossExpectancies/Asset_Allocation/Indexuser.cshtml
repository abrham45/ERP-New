@model IEnumerable<Erp.Models.Asset_Allocation>

@{
    ViewData["Title"] = "Indexuser";
}

<div class="container px-5">
    <div class="card mt-5">
        <div class="card-header">
            <div class="card-title mb-5">
                <h5 class="text-muted text-">My Assets</h5>
            </div>
            <div class="card-tools">
                <div class="row">
                    @*   <div class="col-7">
                            <a asp-action="Create" class="btn btn-glow-dark btn-dark ml-4"><i class="feather icon-user-plus"></i>Add</a>
                        </div>*@
                    <div class="col-4">
                        <form asp-controller="Asset_Allocation" asp-action="Indexuser">
                            <div class="input-group input-group-md">

                                <input type="search" class="form-control float-right" name="employeeCode" placeholder="Search..." />

                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary" type="submit"> <i class="fa fa-search"></i> </button>
                                </div>

                            </div>

                        </form>

                    </div>
                    <div class="col-1">
                        <a asp-action="Index">See All</a>
                    </div>
                </div>

            </div>
        </div>

        <div class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive px-5">
                        <table class="table table-border table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Asset Name </th>
                                    <th>Asset Factory Number </th>
                                    <th>Asset Serial Number </th>
                                    <th style="width: 10%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Asset.Asset_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Asset.factory_number)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Asset.serial_number)
                                        </td>

                                        <td>

                                            <a asp-action="Details" asp-route-id="@item.Id">
                                                <i class="fa fa-angle-double-right fa-fw"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
        <div class="text-right p-4">
            <form asp-controller="Asset_Allocation" asp-action="ExportToExcel" method="post">
                <button type="submit" class="btn btn-glow-dark btn-dark"><i class="feather icon-download"></i>Download</button>
            </form>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
