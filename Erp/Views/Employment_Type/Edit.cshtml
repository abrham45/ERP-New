@model Erp.Models.Employment_Type

@{
    ViewData["Title"] = "Edit";
}

<div class="container px-5">

    <div class="card">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-3">
                <h5 class="text-muted text-"> Register Employment Type</h5>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Employment_TypeId" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descrbtion" class="control-label"></label>
                        <input asp-for="Descrbtion" class="form-control" placeholder="Descrption" />
                        <span asp-validation-for="Descrbtion" class="text-danger"></span>
                    </div>
                    <div class="card-footer bg-white p-2">
                        <div class="row p-0 m-0">
                            <div class="col align-self-start pl-3">
                                <a asp-action="Index">Back to List</a>
                            </div>
                            <div class="col-2  align-self-end  p-0">
                                <div class="form-group mb-0">
                                    <input type="submit" value="Save" class="btn btn-glow-dark btn-primary ml-4" />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             </form>
         </div>
     </div>
</div>



