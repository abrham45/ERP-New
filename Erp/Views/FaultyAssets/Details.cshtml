@model Erp.Models.FaultyAsset

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="card card-info p-2">
        <div class="card-header">
            Faulty Asset Detail
        </div>
        <div class="card-body">
            <div class="profile-img-wrap">
                <div class="profile-img">
                </div>
            </div>
            <div class="row  mt-3">
                <div class="col-lg">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Reason)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Reason)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Asset)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Asset.Asset_Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FaultyAssetType)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FaultyAssetType.Id)
                        </dd>

                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
         </div>
    </div>
</div>