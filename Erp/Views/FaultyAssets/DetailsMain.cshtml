@model Erp.Models.FaultyAsset

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="card card-info p-2">
        <div class="card-header">
            Faulty Asset Detail
        </div>
        <div class="card-body">
            <div class="profile-img-wrap">
                <div class="profile-img">
                </div>
            </div>
            <div class="row  mt-3">
                <div class="col-lg">
                    <dl class="row">

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Reason)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Reason)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Asset)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Asset.Asset_Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FaultyAssetType)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FaultyAssetType.Id)
                        </dd>
                        <dt class="col-sm-2">
                           Asset
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.status == true)
                            {
                                <span class="badge badge-success">Will be Fixed</span>
                            }
                            else if (Model.status == false)
                            {
                                <span class="badge badge-danger">Can not be Fixed</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pending </span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-8 p-2">

                    <a asp-action="IndexDir">Back to List</a>

                </div>

                <div class="col-2 p-0">
                    <form asp-action="Assign" asp-controller="FaultyAssets" asp-route-id="@Model.Id" method="post">
                        <button type="submit" class="btn btn-glow-info btn-info">Fix</button>
                    </form>
                </div>
         

            </div>
        </div>
    </div>
</div>