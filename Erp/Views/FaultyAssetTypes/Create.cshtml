@model Erp.Models.FaultyAssetType

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="card">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-"> Register Faulty Type</h5>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FaultyType" class="control-label">Faulty Type</label>
                        <input asp-for="FaultyType" class="form-control" placeholder="Enter Faulty Type" />
                        <span asp-validation-for="FaultyType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Reason " class="control-label">Description of the Fault</label>
                        <textarea asp-for="Reason " class="form-control" rows="3" placeholder="Enter Description of the Fault"></textarea>
                        <span asp-validation-for="Reason " class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer bg-white p-2">
                    <div class="row p-0 m-0">
                        <div class="col align-self-start pl-3">
                            <a asp-action="Index">Back to List</a>
                        </div>
                        <div class="col-2  align-self-end  p-0">
                            <div class="form-group mb-0">
                                <input type="reset" value="Clear" class="btn btn-glow-dark btn-secondary  mr-3" />
                                <input type="submit" value="Create" class="btn btn-glow-dark btn-primary ml-4" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
