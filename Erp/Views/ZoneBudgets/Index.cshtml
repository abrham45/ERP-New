@model IEnumerable<Erp.Models.ZoneBudget>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OverheadCosts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeCosts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExternalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZoneTotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZonePlan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OverheadCosts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeCosts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExternalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZoneTotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZonePlan.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zone.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
