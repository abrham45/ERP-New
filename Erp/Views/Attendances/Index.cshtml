@model IEnumerable<Erp.Models.Attendance>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container px-5">
    <div class="card mt-5">
        <div class="card-header">
            <div class="card-title mb-5">
                <h5 class="text-muted text-"Attendance</h5>
            </div>
            <div class="card-tools">
                <div class="row">
                    <div class="col-7">
                        <a asp-action="Create" class="btn btn-glow-dark btn-dark ml-4"><i class="feather icon-plus"></i>Create</a>
                    </div>
                    <div class="col-4">
                        
                            <form asp-controller="Attendances" asp-action="Index">
                                <div class="input-group input-group-md">
                                    <input type="search" class="form-control float-right" name="attendance" placeholder="Search..." />
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-primary" type="submit"> <i class="fa fa-search"></i> </button>
                                    </div>
                                </div>
                            </form>
                        
                    </div>
                    <div class="col-1">
                        <a asp-action="Index">See All</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive px-5">
                        <table class="table table-border table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee.EmployeeCode)
                                    </th>
                                    <th>
                                       Employee Name 
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Date)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TimeIn)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TimeOut)
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Employee.EmployeeCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Employee.FirstName)   @Html.DisplayFor(modelItem => item.Employee.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TimeIn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TimeOut)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.AttendanceId">
                                            <i class="fa fa-edit text-green fa-fw"></i>
                                        </a>

                                        <a onclick="deleteConf(@item.AttendanceId)">
                                            <i class="fa fa-trash-alt text-red fa-fw"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.AttendanceId">
                                            <i class="fa fa-angle-double-right fa-fw"></i>
                                        </a>
                                    </td>


                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
