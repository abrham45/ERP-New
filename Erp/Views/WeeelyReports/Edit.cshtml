@model Erp.Models.WeeelyReport

@{
    ViewData["Title"] = "Edit";
}




<div class="container ">
    <div class="card mx-5">
        <div class="card-header">
            <div class="row mb-4">

                <div class="col-12">
                    <h3 class="text-center p-3">
                        በኢፌድሪ የኢንፎርሜሽን መረብ ደህንነት ኤጀንሲ<br />
                        FDRE Information Network Security Agency
                    </h3>
                    <h5>Employee Weekly Report</h5>
                </div>
            </div>
            @* <h6 class="pt-4">
                    Employee Weekly Report
                </h6>*@
        </div>
        <div class="card-body bg">



            @if (TempData.ContainsKey("Error"))
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Error"]
                </div>
            }
            <form asp-action="Edit">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="From" class="control-label"></label>
                                <input type="date" asp-for="From" class="form-control datepicker" />
                                <span asp-validation-for="From" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="To" class="control-label"></label>
                                <input type="date" asp-for="To" class="form-control datepicker" />
                                <span asp-validation-for="To" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="WeeklyRecap" class="control-label my-3 font-weight-bold"></label>
                        <textarea asp-for="WeeklyRecap" class="form-control ckeditor" required></textarea>
                        <span asp-validation-for="WeeklyRecap" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaskRecap" class="control-label my-3 font-weight-bold">Which Tasks are Completed</label>
                        <textarea asp-for="TaskRecap" class="form-control ckeditor" required></textarea>
                        <span asp-validation-for="TaskRecap" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaskUnfinshed" class="control-label my-3 font-weight-bold">Remaining tasks</label>
                        <textarea asp-for="TaskUnfinshed" class="form-control ckeditor"></textarea>
                        <span asp-validation-for="TaskUnfinshed" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Challenge" class="control-label my-3 font-weight-bold">Experienced Challenges </label>
                        <textarea asp-for="Challenge" class="form-control ckeditor"></textarea>
                        <span asp-validation-for="Challenge" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ChallengeOvercome" class="control-label my-3 font-weight-bold">How were the challenges handled? </label>
                        <textarea asp-for="ChallengeOvercome" class="form-control ckeditor"></textarea>
                        <span asp-validation-for="ChallengeOvercome" class="text-danger"></span>
                    </div>
                </div>


                <div class="card-footer bg-white p-2">
                    <div class="row p-0 m-0">
                        <div class="col align-self-start pl-3">

                         
                                <a asp-action="Index">Back to List</a>
                            
                        </div>
                        <div class="col-2  align-self-end  p-0">
                            <div class="form-group mb-0">
                                <input type="submit" value="Save" class="btn btn-glow-dark btn-primary ml-4" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        CKEDITOR.replace('ckeditor');
        $("form").submit(function (e) {
            var messageLength = CKEDITOR.instances['ckeditor'].getData().replace(/<[^>]*>/gi, '').length;
            if (!messageLength) {
                alert('Please enter a message');
                e.preventDefault();
            }
        });
    </script>
}
