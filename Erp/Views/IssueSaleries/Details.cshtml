@model Erp.Models.IssueSalery

@{
    ViewData["Title"] = "Details";
}

<div class="container px-5">
    <div class="card p-3">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-">
                  Net Salary Detail
                </h5>
            </div>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IssueDate)
                </dt>
                <dd class="col-sm-10">
                    @Model.IssueDate.ToString("dd MMM, yyyy")
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.Status == true)
                    {
                        <span class="badge badge-success">Approved</span>
                    }
                    else if (Model.Status == false)
                    {
                        <span class="badge badge-danger">Rejected</span>
                    }
                    else
                    {
                        <span class="badge badge-warning">Pending </span>
                    }
                </dd>

                <dt class="col-sm-2">
                   @Html.DisplayNameFor(model => model.NetAmount)
                </dt>
                <dd class="col-sm-10">
                    <span class="badge badge-success"> @Html.DisplayFor(model => model.NetAmount)</span>
                </dd>
                <dt class="col-sm-2">
                   
                    @Html.DisplayNameFor(model => model.TotalDeduction)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.TotalDeduction != null)
                    {
                        @Html.DisplayFor(model => model.TotalDeduction)
                    }
                    else
                    {
                        <span>-- -- </span>
                    }

                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TotalAlllowance)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.TotalDeduction != null)
                    {
                        @Html.DisplayFor(model => model.TotalAlllowance)
                    }
                    else
                    {
                        <span>-- -- </span>
                    }

                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Employee)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employee.FirstName)  @Html.DisplayFor(model => model.Employee.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Employee) Id
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employee.EmployeeCode)  
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LoanRequest)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LoanRequest.LoanPolicy.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EmployeeBonus)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.EmployeeBonus.Bonus.Amount != null)
                    {
                        @Html.DisplayFor(model => model.EmployeeBonus.Bonus) @Html.DisplayFor(model => model.EmployeeBonus.Bonus.Amount)
                    }
                    else
                    {
                        <span>-- -- </span>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.EmployeeAllowance)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.EmployeeAllowance.Allowance != null)
                    {
                        @Html.DisplayFor(model => model.EmployeeAllowance.Allowance) @Html.DisplayFor(model => model.EmployeeAllowance.Allowance.Amount)
                    }
                    else
                    {
                        <span>-- -- </span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>