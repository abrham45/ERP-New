@model Erp.Models.LoanRequest

@{
    ViewData["Title"] = "Create";
}


<div class="container px-5">
    <div class="card p-3">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-">
                    Request Loan
                </h5>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Loan</label>
                    <select asp-for="LoanPolicyId" class="form-control" asp-items="ViewBag.LoanPolicyId"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Why Loan</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter the reason you want loan..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Start Date</label>
                            <input type="date" asp-for="StartDate" class="form-control" placeholder="Enter Loan Start Date..." />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">End Date</label>
                            <input type="date" asp-for="EndDate" class="form-control" placeholder="Enter Loan End Date..." />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Each Month Deduction Amount</label>
                    <input asp-for="EachMonthDeductionAmount" class="form-control" placeholder="Enter Each Month Deduction Amount..." />
                    <span asp-validation-for="EachMonthDeductionAmount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Total Loan Amount</label>
                    <input asp-for="TotalLoanAmount" class="form-control" placeholder="Enter Total Loan Amount eg: 200000..." />
                    <span asp-validation-for="TotalLoanAmount" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="card-footer">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

   
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
