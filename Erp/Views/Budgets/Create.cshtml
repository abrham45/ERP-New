@model Erp.Models.Budget

@{
    ViewData["Title"] = "Create";
}

<div class="container">
<div class="card">
    <div class="card-header border-bottom-0">
        <div class="card-title mb-5">
            <h5 class="text-muted text-"> Budget</h5>
        </div>
    </div>

    <form asp-action="Create">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row p-0 m-0">
                <div class="col-6 p-0">
                    <div class="form-group p-3">
                        <label asp-for="OverheadCosts" class="control-label"></label>
                        <input asp-for="OverheadCosts" class="form-control" placeholder="Enter Overhead Costs ..." />
                        <span asp-validation-for="OverheadCosts" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6 p-0">
                    <div class="form-group p-3">
                        <label asp-for="DirectorPlanId" class="control-label"></label>
                        <select asp-for="DirectorPlanId" class="form-control" asp-items="@ViewBag.DirectorPlanId"></select>
                        <span asp-validation-for="DirectorPlanId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6 p-0">
                    <div class="form-group p-3">
                        <label asp-for="TimeCosts" class="control-label">Time Costs </label>
                        <input asp-for="TimeCosts" class="form-control" placeholder="Enter Time Cost ..." />
                        <span asp-validation-for="TimeCosts" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6 p-0">
                    <div class="form-group p-3">
                        <label asp-for="ExternalCost " class="control-label"> External Cost</label>
                        <input asp-for="ExternalCost " class="form-control" placeholder="Enter External Cost ..." />
                        <span asp-validation-for="ExternalCost " class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <h4 class="p-3 bg-secondary text-white"> <b>Description of the Budget </b> </h4>
                <textarea asp-for="Description" class="form-control ckeditor" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        </div>

            <div class="card-footer bg-white p-2">
                <div class="row p-0 m-0">
                    <div class="col align-self-start pl-3">
                        <a asp-action="Index">Back to List</a>
                    </div>
                    <div class="col-2  align-self-end  p-0">
                        <div class="form-group mb-0">

                            <input type="submit" value="Create" class="btn btn-glow-dark btn-primary ml-4" />
                        </div>
                    </div>
                </div>
            </div>
</form>

</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

