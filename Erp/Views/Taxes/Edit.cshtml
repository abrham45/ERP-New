@model Erp.Models.Tax

@{
    ViewData["Title"] = "Edit";
}

<div class="container px-5">
    <div class="card p-3">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-">
                    Update Tax
                </h5>
            </div>
        </div>

        <div class="card-body">
            <div class="pl-3 mx-auto">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="MinAmount" class="control-label"></label>
                        <input asp-for="MinAmount" class="form-control" placeholder="Enter Salary Min Amount..." />
                        <span asp-validation-for="MinAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxAmount" class="control-label"></label>
                        <input asp-for="MaxAmount" class="form-control" placeholder="Enter Salary Max Amount..." />
                        <span asp-validation-for="MaxAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaxPercent" class="control-label"></label>
                        <input asp-for="TaxPercent" class="form-control" placeholder="Enter Tax Percent..." />
                        <span asp-validation-for="TaxPercent" class="text-danger"></span>
                    </div>
                 
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div class="card-footer">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
