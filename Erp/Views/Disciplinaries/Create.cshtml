@model Erp.Models.Disciplinary

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Disciplinary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (TempData.ContainsKey("Error"))
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Error"]
            </div>
        }
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Employee Code</label>
                <input name="EmployeeId" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="DisciplinaryTypeId" class="control-label"></label>
                <select asp-for="DisciplinaryTypeId" class="form-control" asp-items="ViewBag.DisciplinaryId"></select>
                <span asp-validation-for="DisciplinaryTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Approved" class="control-label"></label>
                <input asp-for="Approved" class="form-control" />
                <span asp-validation-for="Approved" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detention" class="control-label"></label>
                <input asp-for="Detention" class="form-control" />
                <span asp-validation-for="Detention" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
