@model Erp.Models.Asset_Exchange

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Asset_Exchange</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetId)
        </dd>
    </dl>

</div>

<div class="text-right p-4">
    <div class="row">
        <div class="col-8"></div>
        <div class="col-2 p-0">
            <form asp-controller="Asset_Exchange" asp-action="Approved" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-glow-info btn-info">Approve</button>

            </form>
        </div>
        <div class="col-2 p-0">

            <form asp-controller="Asset_Exchange" asp-action="Reject" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="btn btn-glow-warning btn-warning">Reject</button>

            </form>
        </div>
    </div>

</div>
