@model Employee

@{
    ViewData["Title"] = "Edit";
}

<div class="container px-5">

    <div class="card">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-">Edit Employee</h5>
            </div>
            <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="custom-tabs-four-home-tab" data-toggle="pill" href="#custom-tabs-four-home" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">Basic info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="custom-tabs-four-profile-tab" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">Address</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="custom-tabs-four-messages-tab" data-toggle="pill" href="#custom-tabs-four-messages" role="tab" aria-controls="custom-tabs-four-messages" aria-selected="false">Employee Detail</a>
                </li>

            </ul>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="tab-content" id="custom-tabs-four-tabContent">
                    <div class="tab-pane fade show active" id="custom-tabs-four-home" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">
                        <div class="form-group mt-3">
                            <label asp-for="EmployeeCode" class="control-label">Employee Code</label>
                            <input type="number" asp-for="EmployeeCode" class="form-control" placeholder="Enter Employee code eg. 20004050" />
                            <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                        </div>
                        <div class="row p-0 m-0">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="control-label">Frist Name</label>
                                    <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter your first name" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="control-label">Last Name</label>
                                    <input type="text" asp-for="LastName" class="form-control" placeholder="Enter your last name" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row p-0 m-0">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Sex" class="control-label">Sex</label>
                                    <div class="form-check p-0">

                                        <input id="sex" asp-for="Sex" type="radio" value="Female" />
                                        <label class="form-check-label">Female</label>
                                        <span class="p-5"></span>
                                        <input id="sex" asp-for="Sex" type="radio" value="Male" />
                                        <label class="form-check-label">Male</label>

                                    </div>
                                    <span asp-validation-for="Sex" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="DateOfBirth" class="control-label">DOB</label>
                                    <input type="date" asp-for="DateOfBirth" class="form-control" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Nationality" class="control-label">Nationality</label>

                            <input type="text" asp-for="Nationality" class="form-control" />
                            <span asp-validation-for="Nationality" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                        <div class="row p-0 m-0 mt-3">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Mobile" class="control-label">Phone Number</label>
                                    <input type="text" asp-for="Mobile" class="form-control" placeholder="Enter your phone number" />
                                    <span asp-validation-for="Mobile" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="HomeTelephone" class="control-label">Home Number</label>
                                    <input type="text" asp-for="HomeTelephone" class="form-control" placeholder="Enter your home number" />
                                    <span asp-validation-for="HomeTelephone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="WorkTelephone" class="control-label">Work Number</label>
                            <input type="text" asp-for="WorkTelephone" class="form-control" placeholder="Enter your work number" />
                            <span asp-validation-for="WorkTelephone" class="text-danger"></span>
                        </div>
                        <div class="row p-0 m-0">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Fax" class="control-label">Fax</label>
                                    <input type="number" asp-for="Fax" class="form-control" placeholder="Enter your fax number" />
                                    <span asp-validation-for="Fax" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="POBox" class="control-label">P.O.BOX</label>
                                    <input type="number" asp-for="POBox" class="form-control" placeholder="Enter your p.o.box" />
                                    <span asp-validation-for="POBox" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row p-0 m-0">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Country" class="control-label">Country</label>
                                    <input type="text" asp-for="Country" class="form-control" placeholder="Enter your country" />
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Region" class="control-label">Region</label>
                                    <input type="text" asp-for="Region" class="form-control" placeholder="Enter your region" />
                                    <span asp-validation-for="Region" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row p-0 m-0">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="City" class="control-label">City</label>
                                    <input type="text" asp-for="City" class="form-control" placeholder="Enter your city" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Subcity" class="control-label">Subcity</label>
                                    <input type="text" asp-for="Subcity" class="form-control" placeholder="Enter your subcity" />
                                    <span asp-validation-for="Subcity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Woreda" class="control-label">Woreda</label>
                                    <input type="text" asp-for="Woreda" class="form-control" placeholder="Enter your woreda" />
                                    <span asp-validation-for="Woreda" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="custom-tabs-four-messages" role="tabpanel" aria-labelledby="custom-tabs-four-messages-tab">

                        <div class="row m-0 p-0 mt-3">
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="PositionId" class="control-label">Select Position</label>
                                    @Html.DropDownListFor(model => Model.PositionId, (SelectList)ViewBag.position_id, new { @class = "form-control" })
                                    <span asp-validation-for="PositionId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="DepartmentId" class="control-label">Select Department</label>
                                    @Html.DropDownListFor(model => Model.DepartmentId, (SelectList)ViewBag.department_id, new { @class = "form-control" })
                                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label asp-for="Employment_typeId" class="control-label">Select Employment Type</label>
                                    @Html.DropDownListFor(model => Model.Employment_typeId, (SelectList)ViewBag.Employment_id, new { @class = "form-control" })
                                    <span asp-validation-for="Employment_typeId" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-6 ">
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label">Employee Status</label>
                                    <div class="form-check p-0">

                                        <input id="sex" asp-for="Status" type="checkbox" class="p-5" />
                                        <label class="form-check-label">is_terminated</label>
                                        <span asp-validation-for="Status" class="text-danger"></span>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="card-footer bg-white p-2">
                        <div class="row p-0 m-0">
                            <div class="col align-self-start pl-3">
                                <a asp-action="Index">Back to List</a>
                            </div>
                            <div class="col-1  align-self-end  p-0">
                                <div class="form-group mb-0">
                                    <input type="submit" value="Save" class="btn btn-glow-dark btn-primary ml-4" />

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                @if (ViewBag.SelectedValue != null)
                                {
                                    <text>Selected Employyee code: </text> @ViewBag.SelectedValue;
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.card -->
    </div>
</div>







