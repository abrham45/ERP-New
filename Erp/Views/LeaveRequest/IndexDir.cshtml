@model Erp.Models.AdminLeaveRequestViewVM
@{ 
    ViewData["Title"] = "Leave Request";
}

<div class="container p-3">
    <div class="card p-3 mb-3">

        <div class="row">
            <div class="col-md-3">

                <div class="card shadow-lg">
                    <div class="card-block">
                        <h6 class="mb-4">Total Request</h6>
                        <div class="row d-flex align-items-center">
                            <div class="col-9">
                                <p class="m-b-0">@Html.DisplayFor(modelItem => Model.TotalRequests)</p>
                            </div>
                        </div>
                        <div class="progress m-t-30" style="height: 7px;">
                            <div class="progress-bar progress-c-theme" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-lg">
                    <div class="card-block">
                        <h6 class="mb-4">Pending Request</h6>
                        <div class="row d-flex align-items-center">
                            <div class="col-9">
                                <p class="m-b-0">@Html.DisplayFor(modelItem => Model.PendingRequests)</p>
                            </div>
                        </div>
                        <div class="progress m-t-30" style="height: 7px;">
                            <div class="progress-bar progress-c-theme" role="progressbar" style="width: @Model.PendingRequests%;" aria-valuenow="@Model.PendingRequests" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="card shadow-lg">
                    <div class="card-block">
                        <h6 class="mb-4">Approved Request</h6>
                        <div class="row d-flex align-items-center">
                            <div class="col-9">
                                <p class="m-b-0">@Html.DisplayFor(modelItem => Model.ApprovedRequests)</p>
                            </div>
                        </div>
                        <div class="progress m-t-30" style="height: 7px;">
                            <div class="progress-bar progress-c-theme" role="progressbar" style="width: @Model.ApprovedRequests%;" aria-valuenow="@Model.ApprovedRequests" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-3 ">
                <div class="card shadow-lg">
                    <div class="card-block">
                        <h6 class="mb-4">Approved Request</h6>
                        <div class="row d-flex align-items-center">
                            <div class="col-9">
                                <p class="m-b-0">@Html.DisplayFor(modelItem => Model.RejectedRequests)</p>
                            </div>
                        </div>
                        <div class="progress m-t-30" style="height: 7px;">
                            <div class="progress-bar progress-c-theme" role="progressbar" style="width: @Model.RejectedRequests%;" aria-valuenow="@Model.RejectedRequests" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

       @* <br />
        <p>
            <a asp-action="Create" class="p-4">Request Leave</a>
        </p>
*@
        <table id="tbl-data" class="table">
            <thead>
                <tr>
                    <th>
                        Employee Name
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        End Date
                    </th>
                    <th>
                        LeaveType
                    </th>
                    <th>
                        Date Requested
                    </th>

                    <th>
                        Approval Status
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LeaveRequests)
                {
                    <tr>
                        <td>

                            @Html.DisplayFor(modelItem => item.Employee.FirstName)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateRequested)
                        </td>

                        <td>
                            @if (item.Approved == true)
                            {
                                <span class="badge badge-success">Approved</span>
                            }
                            else if (item.Approved == false)
                            {
                                <span class="badge badge-danger">Rejected</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pending </span>
                            }
                        </td>

                        <td>

                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">

                                Review
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>