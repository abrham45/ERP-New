@model Erp.Models.RequestVehicleChange

@{
    ViewData["Title"] = "Create";
}

<div class="container px-5">

    <div class="card">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-"> Vehicle Change Requesting Form </h5>
            </div>

        </div>
        <div class="text-center p-2 my-1">
            @if (TempData.ContainsKey("Warning"))
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Warning"]
                </div>
            }
        </div>
        <div class="card-body">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <div class="form-group  p-3">
                    <label>Vehicle Plate Number</label>
                    <input name="VehicleId" class="form-control" placeholder=" EnterVehicle Plate Number .." required />
                </div>
                    

                <div class="form-group p-3">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter the asset you want to request . . ."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>


                <div class="card-footer bg-white p-2">
                    <div class="row p-0 m-0">

                        <div class="col-2  align-self-end  p-0">
                            <div class="form-group mb-0">

                                <input type="submit" value="Submit" class="btn btn-glow-dark btn-primary ml-4" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>



        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

