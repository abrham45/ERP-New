@model Erp.Models.EmployeeAllowance

@{
    ViewData["Title"] = "Details";
}

<div class="container px-5">
    <div class="card p-3">
        <div class="card-header border-bottom-0">
            <div class="card-title mb-5">
                <h5 class="text-muted text-"> Employee Allowance Detail  </h5>
            </div>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    Effective Date
                </dt>
                <dd class="col-sm-10">
                    @Model.EffectiveDate.ToString("dd, MMM, yyyy")
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Employee)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employee.FirstName)      @Html.DisplayFor(model => model.Employee.LastName)
                </dd>
                <dt class="col-sm-2">
                    Employee Id
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Employee.EmployeeCode)     
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Allowance)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Allowance.Name)
                </dd>
                <dt class="col-sm-2">
                    Allowance Amount
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Allowance.Amount)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
     </div>
</div>