@model Erp.Models.DepartmentChange

@{
    ViewData["Title"] = "Details";
}

<div class="container">
<div class="card card-info p-2">
    <div class="card-header">
         Department Transfer Detail
    </div>
    <div class="card-body">
        <div class="row  mt-3">
            <div class="col-lg">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Employee)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Employee.FirstName)  @Html.DisplayFor(model => model.Employee.LastName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.sentDate)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.sentDate)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.reason)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.reason)
                    </dd>
                    <dt  class="col-sm-2">
                       Transfer To: 
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model=> model.Department.Name)
                    </dd>

                </dl>

                <div>
                    <a class="btn btn-success" asp-action="Approve" asp-route-id="@Model.Id">
                        <i class="fade fa-check">  </i>Approve
                    </a>
                    <a class="btn btn-danger" asp-action="Reject" asp-route-id="@Model.Id">
                        <i class="fade fa-Remove">  </i>Reject
                    </a>
                    <a class="btn btn-outline-secondary" asp-action="Index">
                        <i class="fade fa-arrow-left">  </i>Back to List
                    </a>

                </div>
            </div>
            </div>
        </div>
    </div>
    </div>
            
